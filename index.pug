mixin list(arr, className)
  ul(class= `${className}__list`)
    each value in arr 
      li(class= `${className}__item`)
        a(href="#!" aria-label= value)= value

mixin brands(arr)
  ul.footer__brands
    each value in arr 
      li.footer__brand
        a(href=`https://www.${value}.com` aria-label= value target="_blank")  
          img(src= `./images/icon-${value}.svg`, alt= value)

mixin description(data)
  .description__items   
    each value in data
      .description__items_box.box
        img.description__image(src= value["src"], alt= value["title"])
        h1.title= value["title"]
        p.subtitle= value["subtitle"]

mixin articles(data)
  h1.title.articles__header Latest Articles
  .articles__items
    each value in data
      .box.articles__box
        img.articles__image(src= value["src"], alt= value["title"])
        .articles__section
          p.articles__author= `By ${value["author"]}`
          a.articles__title(href="#!" aria-label="article")= value["title"]
          p.articles__subtitle= value["subtitle"]

doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Easybank Landing Page
    link(rel="icon" type="image/png" sizes="32x32" href="./images/favicon-32x32.png")
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" integrity="sha512-MV7K8+y+gLIBoVD59lQIYicR65iaqukzvf/nwasF0nqhPay5w/9lJmVM2hMDcnK1OnMGCdVK+iQrJ7lzPJQd1w==" crossorigin="anonymous" referrerpolicy="no-referrer")
    link(rel="stylesheet", href="./style.css")
  body
    header.header
      a(href="#" aria-label="home") 
        img.header__image(src="./images/logo.svg", alt="logo")
      img.header__burger(src="./images/icon-hamburger.svg", alt="menu")
      +list(["home", "article", "contact", "blog", "careers"], 'header')
      button.header__button.button(type="submit") Request Invite
